<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="memberSQL">
 	<resultMap type = "member.bean.MemberDTO" id="memberResult">
 		<result column="NAME" property="name"/>
 		<result column="PWD" property="pwd"/>
 		<result column="ID" property="id"/>
 		<result column="GENDER" property="gender"/>
 		<result column="EMAIL1" property="email1"/>
 		<result column="EMAIL2" property="email2"/>
 		<result column="TEL1" property="tel1"/>
 		<result column="TEL2" property="tel2"/>
 		<result column="TEL3" property="tel3"/>
 		<result column="ZIPCODE" property="zipcode"/>
 		<result column="ADDR1" property="addr1"/>
 		<result column="ADDR2" property="addr2"/>
 	</resultMap> 	
 	
 	<select id="getMemberList" parameterType="String" resultMap="memberResult">
 		select * from member where ID = #{id}
 	</select>
 	
 	<insert id="write" parameterType="member" >
 		insert into member values(#{name}, #{pwd}, #{id}, #{gender}, #{email1}, #{email2}, #{tel1}, #{tel2}, #{tel3}, #{zipcode}, #{addr1}, #{addr2}, #{sysdate})
 	</insert>
 	
 	<select id="login" parameterType="String">
 		select id, pwd, email1, email2 from member where id = #{id} and  pwd = #{pwd}
 	</select>
 	
 	<select id="login2" parameterType ="String" resultType="member">
 		select * from member where id = #{id}  and pwd = #{pwd}
 	</select>
 	
 	<select id="getMember" parameterType ="String">
 		select * from member where id = #{id}
 	</select>
 	
 	<update id="update" parameterType="member">
 		update member set pwd = #{pwd}, gender = #{gender}, email1 = #{email1}, email2 = #{email2}, tel1 = #{tel1}, tel2 = #{tel2}, tel3 = #{tel3}, zipcode = #{zipcode}, addr1 = #{addr1}, addr2 = #{addr2}, logtime = #{sysdate} where id = #{id}
 	</update>
</mapper>
